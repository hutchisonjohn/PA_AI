{
  "name": "mccarthy-app",
  "version": "1.0.0",
  "description": "McCarthy PA AI Agent - Voice + Text AI Personal Assistant for Australian Families",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start --localhost",
    "android": "expo start --android --localhost",
    "android:port": "adb reverse tcp:8081 tcp:8081 && adb reverse tcp:8082 tcp:8082",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "test": "jest",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prebuild": "expo prebuild",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios"
  },
  "dependencies": {
    "expo": "~51.0.28",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/drawer": "^6.7.2",
    "expo-constants": "~16.0.2",
    "firebase": "^10.13.2",
    "@react-native-async-storage/async-storage": "~1.23.1",
    "expo-secure-store": "~13.0.1",
    "expo-speech": "~12.0.2",
    "expo-av": "~14.0.7",
    "expo-location": "~17.0.1",
    "expo-calendar": "~13.0.4",
    "expo-notifications": "~0.28.15",
    "react-native-maps": "1.14.0",
    "react-native-calendars": "^1.1307.0",
    "expo-image-manipulator": "~12.0.1",
    "expo-file-system": "~17.0.1",
    "i18next": "^23.11.1",
    "react-i18next": "^14.0.5",
    "luxon": "^3.4.4",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "react-native-safe-area-context": "^4.10.5",
    "react-native-screens": "^3.34.0",
    "react-native-gesture-handler": "^2.16.2",
    "react-native-reanimated": "^3.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.2",
    "@expo/cli": "^0.18.6",
    "@expo/config": "~8.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "jest-expo": "~51.0.3",
    "@testing-library/react-native": "^12.8.0",
    "@testing-library/jest-native": "^5.4.3",
    "@types/react": "^18.3.3",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.5.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "jest-expo",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|react-i18next|luxon)/)"
    ]
  },
  "private": true
}

